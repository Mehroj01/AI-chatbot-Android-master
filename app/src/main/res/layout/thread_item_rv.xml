<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/thread_rv_bg"
    android:elevation="12dp"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="20dp"
    android:paddingBottom="10dp">


    <TextView
        android:id="@+id/threadNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif"
        android:text="Thread 1"
        android:textColor="@color/black1"
        android:textSize="19sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/contextual_menu"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/menu_bg"
        android:elevation="2dp"
        android:padding="4dp"
        android:src="@drawable/contextual_menu" />

    <TextView
        android:id="@+id/questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/threadNum"
        android:fontFamily="sans-serif"
        android:padding="2dp"
        android:text="“Explain how internet works for \n 6 year old
    Why is the sky blue?,
    “Got any creative ideas for a 5 year
    old’s birthday?”"
        android:textColor="@color/black1"
        android:textSize="17sp"
        android:textStyle="normal" />


    <TextView
        android:id="@+id/extraQuestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/questions"
        android:layout_marginTop="20dp"
        android:background="@drawable/extra_bg"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:padding="9dp"
        android:text="12 more questions"
        android:textColor="#007BFF"
        android:textSize="16dp"
        android:visibility="gone"
        android:textStyle="bold" />

</RelativeLayout>